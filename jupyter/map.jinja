{%- load_yaml as base_defaults %}
Debian:
  pkgs:
  - python-dev
  - gfortran
  - libblas-dev
  - liblapack-dev
  - libatlas-base-dev
  base_dir: /srv/jupyter
  bind:
    address: 0.0.0.0
    port: 8888
{%- endload %}

{%- set server = salt['grains.filter_by'](base_defaults, merge=salt['pillar.get']('jupyter:server')) %}